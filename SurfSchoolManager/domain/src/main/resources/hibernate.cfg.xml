<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/sfm_dev</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">q</property>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.CsCustomerEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.ItAvilableLessonTypeEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.ItInstructorEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.IvInventoryEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.IvInventoryPropertiesEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.IvInventorySettingsEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.IvInventoryTypeEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.LsCustomerInventoryEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.LsLessonEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.LsLessonCustomerEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.LsLessonInstructorEntity"/>
        <mapping class="ru.bukan.surfSchoolManager.domain.model.LsLessonTypeEntity"/>

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>